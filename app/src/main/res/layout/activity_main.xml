<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/layoutLoadFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <include layout="@layout/custom_view_long"/>
    <RadioGroup
        android:id="@+id/radioGroupBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        >

        <RadioButton
            android:id="@+id/btnHomeMenu"
            style="@style/btnMenuBottom"
            android:checked="true"
            android:text="@string/home"
            android:drawableTop="@drawable/tab_home"
            android:background="@color/colorWhite"
            />

        <RadioButton
            android:id="@+id/btnRankMenu"
            style="@style/btnMenuBottom"
            android:text="@string/rankingList"
            android:drawableTop="@drawable/tab_rank"
            android:background="@color/colorWhite"/>

        <RadioButton
            android:id="@+id/btnDiscoverMenu"
            style="@style/btnMenuBottom"
            android:text="@string/discover"
            android:drawableTop="@drawable/tab_find"
            android:background="@color/colorWhite"/>

        <RadioButton
            android:id="@+id/btnMineMenu"
            style="@style/btnMenuBottom"
            android:text="@string/mine"
            android:drawableTop="@drawable/tab_self"
            android:background="@color/colorWhite"/>
    </RadioGroup>

</LinearLayout>
